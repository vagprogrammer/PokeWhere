<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:alpha="1.0"
    android:background="@drawable/background_login"
    android:padding="@dimen/mat_dim_normal">

    <ImageView
        android:id="@+id/imgFavorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/mat_dim_short"
        android:background="#00000000"
        app:srcCompat="@drawable/ic_bookmark"
        android:clickable="true"
        android:contentDescription="@string/description_img_icon"/>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/mat_dim_large"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CP:"
                android:textColor="@color/color_negro" />

            <TextView
                android:id="@+id/txtCP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mat_dim_short"
                android:layout_marginStart="@dimen/mat_dim_short"
                android:text="4500"
                android:layout_gravity="start"
                android:textAlignment="viewStart"
                android:textColor="@color/color_negro"
                android:textSize="@dimen/text_size_very_large"
                android:textStyle="normal|bold"
                android:textAllCaps="false"
                android:fontFamily="monospace" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgPokemon"
            android:layout_width="200.0dip"
            android:layout_height="100.0dip"
            android:layout_marginBottom="@dimen/mat_dim_large"
            app:srcCompat="@drawable/pokemon_id_150"/>

        <LinearLayout
            android:id="@+id/layoutName"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="32.0dip"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mewtwo"
                android:textAlignment="center"
                android:textSize="@dimen/text_size_very_large"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnEditName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mat_dim_normal"
                android:layout_marginLeft="@dimen/mat_dim_normal"
                android:background="#00000000"
                app:srcCompat="@drawable/ic_mode_edit_black_24dp" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="118.0dip"
        app:cardCornerRadius="8.0dip">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="@dimen/mat_dim_short"
            android:paddingLeft="@dimen/mat_dim_short"
            android:paddingRight="@dimen/mat_dim_short"
            android:paddingTop="85.0dip">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutIV"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/mat_dim_large"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="IV:"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/mat_dim_short"
                            android:layout_marginLeft="@dimen/mat_dim_short"
                            android:layout_weight="1.0"
                            android:text="100%"
                            android:layout_gravity="start"
                            android:textAlignment="viewStart"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_attack"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/txtAttack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/mat_dim_short"
                            android:layout_marginLeft="@dimen/mat_dim_short"
                            android:text="15"
                            android:textSize="14.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_defense"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/txtDefense"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/mat_dim_short"
                            android:layout_marginLeft="@dimen/mat_dim_short"
                            android:text="15"
                            android:textSize="14.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_stamina"
                            android:textSize="14.0sp" />

                        <TextView
                            android:id="@+id/txtStamina"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/mat_dim_short"
                            android:layout_marginLeft="@dimen/mat_dim_short"
                            android:text="15"
                            android:textSize="14.0sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCP"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32.0dip"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/text_cp_max"
                        android:layout_gravity="end"
                        android:textAlignment="viewEnd" />

                    <TextView
                        android:id="@+id/txtMaxCP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mat_dim_normal"
                        android:layout_marginLeft="@dimen/mat_dim_normal"
                        android:layout_weight="1.0"
                        android:text="4500"
                        android:layout_gravity="start"
                        android:textAlignment="viewStart" />

                    <LinearLayout
                        android:id="@+id/layoutEvolutionCP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="@string/text_cp_mult"
                            android:layout_gravity="end"
                            android:textAlignment="viewEnd" />

                        <TextView
                            android:id="@+id/txtMultCP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/mat_dim_normal"
                            android:layout_marginLeft="@dimen/mat_dim_normal"
                            android:layout_weight="1.0"
                            android:text="165" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="@string/text_level"
                        android:layout_gravity="end"
                        android:textAlignment="viewEnd" />

                    <TextView
                        android:id="@+id/txtLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/mat_dim_normal"
                        android:layout_marginLeft="@dimen/mat_dim_normal"
                        android:layout_weight="1.0"
                        android:text="40" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutCandys"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10.0dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutTotal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/mat_dim_normal"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_stardust" />

                        <ImageView
                            android:layout_width="16.0dip"
                            android:layout_height="16.0dip"
                            android:layout_marginStart="@dimen/mat_dim_normal"
                            android:layout_marginLeft="@dimen/mat_dim_normal"
                            app:srcCompat="@drawable/ic_stardust"
                            android:contentDescription="@string/description_img_icon"/>

                        <TextView
                            android:id="@+id/txtStardust"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/mat_dim_normal"
                            android:layout_marginLeft="@dimen/mat_dim_normal"
                            android:text="1250000" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_candies" />

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="16.0dip"
                                android:layout_height="16.0dip"
                                android:layout_marginStart="@dimen/mat_dim_normal"
                                android:layout_marginLeft="@dimen/mat_dim_normal"
                                app:srcCompat="@drawable/ic_candie"
                                android:contentDescription="@string/description_img_icon"/>

                            <TextView
                                android:id="@+id/txtCandies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/mat_dim_normal"
                                android:layout_marginLeft="@dimen/mat_dim_normal"
                                android:text="125" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutPowerup"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnPowerUp"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1.0"
                            android:text="@string/text_powerup"
                            android:textColor="@android:color/white"
                            android:background="@drawable/buttonshape"
                            android:shadowColor="@color/color_background_stroke_user_profile"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginTop="@dimen/padding_10"
                            android:layout_marginBottom="@dimen/padding_10"/>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="@dimen/mat_dim_normal"
                            android:layout_marginLeft="@dimen/mat_dim_large"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="16.0dip"
                                android:layout_height="16.0dip"
                                app:srcCompat="@drawable/ic_stardust"
                                android:contentDescription="@string/description_img_icon"/>

                            <TextView
                                android:id="@+id/txtStardustToPowerup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/mat_dim_normal"
                                android:layout_marginLeft="@dimen/mat_dim_normal"
                                android:layout_weight="1.0"
                                android:text="2500" />

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="16.0dip"
                                android:layout_height="16.0dip"
                                app:srcCompat="@drawable/ic_candie"
                                android:contentDescription="@string/description_img_icon"/>

                            <TextView
                                android:id="@+id/txtCandiesToPowerUp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/mat_dim_normal"
                                android:layout_marginLeft="@dimen/mat_dim_normal"
                                android:layout_weight="1.0"
                                android:text="25" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutEvolve"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnEvolve"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_weight="1.0"
                            android:text="@string/text_evolve"
                            android:textColor="@android:color/white"
                            android:background="@drawable/buttonshape"
                            android:shadowColor="@color/color_background_stroke_user_profile"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:layout_marginTop="@dimen/padding_10"
                            android:layout_marginBottom="@dimen/padding_10"/>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginStart="@dimen/mat_dim_large"
                            android:layout_marginLeft="@dimen/mat_dim_large"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="16.0dip"
                                android:layout_height="16.0dip"
                                app:srcCompat="@drawable/ic_candie"
                                android:contentDescription="@string/description_img_icon"/>

                            <TextView
                                android:id="@+id/txtCandiesToEvolve"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/mat_dim_normal"
                                android:layout_marginLeft="@dimen/mat_dim_normal"
                                android:layout_weight="1.0"
                                android:text="100" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutMoves"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="@dimen/mat_dim_large"
                    android:orientation="vertical"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txtAttack1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/mat_dim_short"
                        android:layout_weight="1.0"
                        android:text="Ataque 1" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="@dimen/mat_dim_large"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_damage" />

                        <TextView
                            android:id="@+id/txtDamage1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/mat_dim_normal"
                            android:layout_marginStart="@dimen/mat_dim_normal"
                            android:layout_weight="1.0"
                            android:text="30" />

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_dps" />

                        <TextView
                            android:id="@+id/txtDPS1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/mat_dim_normal"
                            android:layout_marginLeft="@dimen/mat_dim_normal"
                            android:layout_weight="1.0"
                            android:text="60" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtAttack2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/mat_dim_short"
                        android:layout_weight="1.0"
                        android:text="Ataque 2" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView27"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_damage" />

                        <TextView
                            android:id="@+id/txtDamage2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/mat_dim_normal"
                            android:layout_marginLeft="@dimen/mat_dim_normal"
                            android:layout_weight="1.0"
                            android:text="15" />

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_dps" />

                        <TextView
                            android:id="@+id/txtDPS2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/mat_dim_normal"
                            android:layout_marginLeft="@dimen/mat_dim_normal"
                            android:layout_weight="1.0"
                            android:text="35" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutButtons"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnTransfer"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="1.0"
                        android:text="@string/action_transferir"
                        android:textColor="@android:color/white"
                        android:background="@drawable/buttonshape"
                        android:shadowColor="@color/color_background_stroke_user_profile"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="@dimen/padding_10"
                        android:layout_marginBottom="@dimen/padding_10"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>