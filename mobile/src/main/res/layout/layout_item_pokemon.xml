<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.0dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgFavorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/mat_dim_short"
            android:background="#00000000"
            app:srcCompat="@drawable/ic_bookmark"
            android:clickable="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/mat_dim_short">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCP"
                    android:layout_width="24.0dip"
                    android:layout_height="24.0dip"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_cp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CP"
                    android:textSize="10.0sp" />

                <TextView
                    android:id="@+id/txtCP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mat_dim_short"
                    android:layout_marginStart="@dimen/mat_dim_short"
                    android:text="4500"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgPokemon"
                android:layout_width="100.0dip"
                android:layout_height="50.0dip"
                android:layout_marginTop="@dimen/mat_dim_short"
                app:srcCompat="@drawable/pokemon_id_150" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mat_dim_short"
                android:text="Mewtwo"
                android:textAlignment="center"
                android:textStyle="bold"
                android:maxLines="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/mat_dim_short"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="IV:"
                    android:layout_gravity="end"
                    android:textAlignment="viewEnd" />

                <TextView
                    android:id="@+id/txtIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/mat_dim_short"
                    android:layout_weight="1.0"
                    android:text="100%"
                    android:layout_gravity="start"
                    android:textAlignment="viewStart" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/mat_dim_short"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A:"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/txtAttack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/mat_dim_normal"
                    android:layout_marginLeft="@dimen/mat_dim_normal"
                    android:text="D:"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/txtDefense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mat_dim_normal"
                    android:layout_marginEnd="@dimen/mat_dim_normal"
                    android:text="15"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S:"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/txtStamina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/mat_dim_normal"
                android:gravity="center">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:srcCompat="@drawable/ic_candie"
                    android:id="@+id/imageView2" />

                <TextView
                    android:id="@+id/txtCandies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/mat_dim_normal"
                    android:layout_marginEnd="@dimen/mat_dim_normal"
                    android:text=":150"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <Button
                android:id="@+id/btnCompare"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="25.0dip"
                android:layout_marginTop="@dimen/mat_dim_short"
                android:padding="0.0dip"
                android:text="@string/text_btn_show_all"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/layoutContainer"
        android:background="@color/color_negro_degradado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
    </FrameLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/color_blanco"
        android:clickable="false"/>

</android.support.v7.widget.CardView>