<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.javic.pokewhere.ActivityFiltros">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <CheckedTextView
            android:id="@+id/checked_tv_filtro_show_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/filtro_all_markers"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple" />

    </android.support.v7.widget.CardView>

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="10dp">

        <CheckedTextView
            android:id="@+id/checked_tv_filtro_busqueda"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/filtro_busqueda_markers"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple" />

    </android.support.v7.widget.CardView>

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
